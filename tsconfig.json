{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "nestjs-rapid": [
        "libs/nestjs-rapid/src"
      ],
      "nestjs-rapid/*": [
        "libs/nestjs-rapid/src/*"
      ],
    }
  }
}
