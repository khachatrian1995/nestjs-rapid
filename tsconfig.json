{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@rapid/core": [
        "libs/core/src"
      ],
      "@rapid/core/*": [
        "libs/core/src/*"
      ],
      "@rapid/typeorm": [
        "libs/typeorm/src"
      ],
      "@rapid/typeorm/*": [
        "libs/typeorm/src/*"
      ],
      "@rapid/sequelize": [
        "libs/sequelize/src"
      ],
      "@rapid/sequelize/*": [
        "libs/sequelize/src/*"
      ]
    }
  }
}
