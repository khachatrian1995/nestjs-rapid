{
  "name": "nestjs-rapid",
  "version": "0.1.0",
  "description": "",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build => core": "rimraf libs/core/dist | tsc --p libs/core",
    "build => typeorm": "rimraf libs/typeorm/dist | tsc --p libs/typeorm",
    "build => sequelize": "rimraf libs/sequelize/dist | tsc --p libs/sequelize",
    "prebuild": "rimraf dist",
    "docker:up => typeorm-demo": "docker-compose -f apps/typeorm-demo/docker-compose.yml up -d",
    "docker:down => typeorm-demo": "docker-compose -f apps/typeorm-demo/docker-compose.yml down",
    "build => typeorm-demo": "nest build typeorm-demo",
    "start => typeorm-demo": "nest start typeorm-demo",
    "start:dev => typeorm-demo": "nest start --watch typeorm-demo",
    "start:debug => typeorm-demo": "nest start --debug --watch typeorm-demo",
    "start:prod => typeorm-demo": "node dist/apps/typeorm-demo/main",
    "docker:up => sequelize-demo": "docker-compose -f apps/sequelize-demo/docker-compose.yml up -d",
    "docker:down => sequelize-demo": "docker-compose -f apps/sequelize-demo/docker-compose.yml down",
    "build => sequelize-demo": "nest build sequelize-demo",
    "start => sequelize-demo": "nest start sequelize-demo",
    "start:dev => sequelize-demo": "nest start --watch sequelize-demo",
    "start:debug => sequelize-demo": "nest start --debug --watch sequelize-demo",
    "start:prod => sequelize-demo": "node dist/apps/sequelize-demo/main",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/nestjs-rapid/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs-rapid/core": "file:libs/core",
    "@nestjs-rapid/sequelize": "file:libs/sequelize",
    "@nestjs-rapid/typeorm": "file:libs/typeorm",
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/platform-express": "^7.0.0",
    "@nestjs/sequelize": "^0.1.1",
    "@nestjs/typeorm": "^7.1.4",
    "mysql": "^2.18.1",
    "mysql2": "^2.2.5",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "sequelize": "^5.22.3",
    "sequelize-typescript": "^1.1.0",
    "typeorm": "^0.2.28"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/express": "^4.17.3",
    "@types/jest": "26.0.10",
    "@types/node": "^13.9.1",
    "@types/sequelize": "^4.28.9",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "3.9.1",
    "@typescript-eslint/parser": "3.9.1",
    "eslint": "7.7.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "26.4.2",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "26.2.0",
    "ts-loader": "^6.2.1",
    "ts-node": "9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@rapid/core/(.*)": "<rootDir>/libs/core/src/$1",
      "@rapid/core": "<rootDir>/libs/core/src",
      "@rapid/typeorm/(.*)": "<rootDir>/libs/typeorm/src/$1",
      "@rapid/typeorm": "<rootDir>/libs/typeorm/src",
      "@rapid/sequelize/(.*)": "<rootDir>/libs/sequelize/src/$1",
      "@rapid/sequelize": "<rootDir>/libs/sequelize/src"
    }
  }
}
